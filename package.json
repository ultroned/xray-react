{
  "name": "xray-react",
  "version": "1.1.0",
  "description": "React layout debugger inspired by Xray-rails.",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./index.js"
    },
    "./lib/xray-react-ui": "./lib/xray-react-ui.js",
    "./lib/xray-react-client": "./lib/xray-react-client.js"
  },
  "scripts": {
    "dev": "node index.js",
    "build": "rollup -c",
    "prepublish": "rollup -c",
    "server": "node server.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "prettier --write",
      "eslint --fix",
      "bash -c 'npx rollup -c'",
      "bash -c 'git add build/'"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "component-inspector",
    "css",
    "debug",
    "debugging",
    "development",
    "development-tool",
    "devtools",
    "inspector",
    "layout",
    "nextjs",
    "react",
    "react-component",
    "react-inspector",
    "reactjs",
    "style",
    "typescript",
    "ui",
    "vite",
    "vite-plugin",
    "webpack",
    "webpack-plugin",
    "x-ray"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loogle18/xray-react.git"
  },
  "author": "Sviatoslav Medvid <sviat.minato@gmail.com> (https://github.com/loogle18)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loogle18/xray-react/issues"
  },
  "homepage": "https://github.com/loogle18/xray-react#readme",
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "rollup": "^4.22.0"
  },
  "dependencies": {
    "socket.io": "^4.8.1"
  }
}
